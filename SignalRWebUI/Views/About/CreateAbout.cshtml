@model CreateAboutDtos
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakımda Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="title">Başlık</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
							<div class="form-group">
								<label for="description">Açıklma</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>
							<div class="form-group">
								<label for="ımageurl">Hakkımda Resmi</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ımageurl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

