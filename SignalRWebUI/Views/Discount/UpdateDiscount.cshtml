@model UpdateDiscountDtos
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İndirim Güncelle</div>
						</div>
						<input type="hidden" asp-for="DiscountID" />
						<div class="card-body">
							<div class="form-group">
								<label for="title">Ürün Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
							<div class="form-group">
								<label for="Amount">Ürün İndirim Oranını Giriniz</label>
								<input type="text" class="form-control" asp-for="Amount" id="Amount">
							</div>
							<div class="form-group">
								<label for="ımageurl">Ürün Resmi</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ımageurl">
							</div>
							<div class="form-group">
								<label for="description">Ürün Açıklaması Giriniz</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-success">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
