        <script type="text/javascript">
            $(document).ready(() => {
                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7035/SignalRHub").build();
                $("#connstatus").text(connection.state);
                connection.start().then(() => {

                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendStatistic");
                    }, 1000);

                }).catch((err) => { console.log(err) });

                connection.on("ReciveCategoryCount", (value) => {
                    $("#categorycount").text(value)
                })
                connection.on("ReciveProductCount", (value2) => {
                    $("#productcount").text(value2)
                })
                connection.on("ReciveActiveCategoryCount", (value3) => {
                    $("#activecategorycount").text(value3)
                })
                connection.on("RecivePasiveCategoryCount", (value4) => {
                    $("#pasivecategorycount").text(value4)
                })
                connection.on("ReciveProductCountByCategoryNameHamburger", (value5) => {
                    $("#countbycategorynamehamburger").text(value5)
                })

                connection.on("ReciveProductCountByCategoryNameDrink", (value6) => {
                    $("#countbycategorynamedrink").text(value6)
                })
                connection.on("ReciveProductPriceAvg", (value7) => {
                    $("#productpriceavg").text(value7)
                })
                connection.on("ReciveProductNameByMaxPrice", (value8) => {
                    $("#productnamebymaxprice").text(value8)
                })
                connection.on("ReciveProductNameByMinPrice", (value9) => {
                    $("#productnaamebyminprice").text(value9)
                })
                connection.on("ReciveProductAvgPriceByHomburger", (value10) => {
                    $("#productavgpricebyhomburger").text(value10)
                })
                connection.on("ReciveActiveOrderCount", (value11) => {
                    $("#activeordercount").text(value11)
                })
                connection.on("ReciveTotalOrderCount", (value12) => {
                    $("#totalordercount").text(value12)
                })

            });
        </script>

